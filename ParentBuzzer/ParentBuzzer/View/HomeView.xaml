<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParentBuzzer.View.HomeView">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#4c155e">
            <Grid BackgroundColor="#4c155e" Margin="0,0,0,60">
                <Label 
                Text="ParentBuzzer"
                StyleClass="headline2"
                TextColor="#ffcea3"
                FontAttributes="Bold"
                FontSize="28"
                Margin="10, 20, 0, 20" 
                HorizontalTextAlignment="Start" />
                <Button 
                Text="Min Profil"
                Clicked="Button_Clicked_Profile" 
                StyleClass="profileButton"
                FontSize="14"
                TextColor="#ffcea3"
                BackgroundColor="#ff4fb0"
                FontAttributes="Bold"
                Margin="240, 15, 10, 15" />
            </Grid>
            <StackLayout>
               <Label Text="Happy hunting!" 
               FontSize="26"
               TextColor="#ff4fb0"
               HorizontalTextAlignment="Center"  
               Margin="30,40,20,60"/>
            <Button Text="Start Buzzing"
                Clicked="Button_Clicked_Search" 
                TextColor="#ff4fb0"                
                StyleClass="button" 
                BackgroundColor="#ffcea3"
                FontAttributes="Bold"
                FontSize="26"
                Margin="0,40,0,20"
                HorizontalOptions="Center"/>
        </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>