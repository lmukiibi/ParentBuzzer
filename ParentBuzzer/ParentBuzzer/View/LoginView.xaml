<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParentBuzzer.View.LoginView">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#4c155e">
            <Label 
                Text="Inloggning"
                StyleClass="headline2"
                TextColor="#ffcea3"
                FontAttributes="Bold"
                FontSize="40"
                Margin="0, 30, 0, 60"
                HorizontalTextAlignment="Center" />
            <Entry 
                x:Name="Email"
                Placeholder="Email"
                StyleClass="entry" 
                TextColor="#ffcea3"
                FontSize="28"
                Margin="25, 5, 25, 5" />
            <Entry 
                x:Name="Password"
                Placeholder="Lösenord"
                StyleClass="entry" 
                TextColor="#ffcea3"
                FontSize="28"
                Margin="25, 5, 25, 5" />
            <Button 
                Text="Logga in"
                Clicked="Button_Clicked"
                StyleClass="button"
                TextColor="#ff4fb0"
                BackgroundColor="#ffcea3"
                FontAttributes="Bold"
                FontSize="26"
                Margin="0,100,0,40"
                HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>