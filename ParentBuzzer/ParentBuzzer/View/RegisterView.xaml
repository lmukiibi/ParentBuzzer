<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParentBuzzer.View.RegisterView">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#4c155e">
            <Label Text="Skapa konto"
                   StyleClass="headline2"
                   TextColor="#ffcea3"
                   FontAttributes="Bold"
                   FontSize="40"
                   Margin="0, 30, 0, 30"
                   HorizontalTextAlignment="Center" />
            <Entry 
                x:Name="UserName"
                Placeholder="Användarnamn"
                TextColor="#ffcea3"
                FontSize="28"
                Margin="25, 5, 25, 5" />
            <Entry 
                x:Name="Email"
                Placeholder="Email"
                TextColor="#ffcea3"
                FontSize="28"
                Margin="25, 5, 25, 5" />
            <Entry 
                x:Name="Password"
                Placeholder="Lösenord"
                TextColor="#ffcea3"
                FontSize="28"
                Margin="25, 5, 25, 5" />
            <Entry 
                x:Name="City"
                Placeholder="Stad"
                TextColor="#ffcea3"
                FontSize="28"
                Margin="25, 5, 25, 5" />
            <Button 
                Text="Registrera"
                Clicked="Button_Clicked"
                StyleClass="button"
                TextColor="#ff4fb0"
                BackgroundColor="#ffcea3"
                FontAttributes="Bold"
                FontSize="26"
                Margin="0,46,0,0"
                HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>